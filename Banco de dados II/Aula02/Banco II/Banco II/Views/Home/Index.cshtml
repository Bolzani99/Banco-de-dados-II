@model ICollection<Banco_II.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Card -->
            <div class="card shadow-sm mb-4 bg-marine-blue text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 mb-2">
                        <i class="fas fa-users me-3"></i>@Model.Count Estudante(s) Cadastrados
                    </h1>
                    <p class="lead mb-0">Sistema de Gerenciamento Acadêmico</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-marine-dark">
                    <h4 class="card-title mb-0 text-white">
                        <i class="fas fa-cogs me-2"></i>Ações Rápidas
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="Create" class="btn btn-marine w-100">
                                <i class="fas fa-user-plus me-1"></i>Novo Estudante
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="Courses" class="btn btn-marine-light w-100">
                                <i class="fas fa-book me-1"></i>Ver Cursos
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="StudentCourses" class="btn btn-marine-outline w-100">
                                <i class="fas fa-clipboard-list me-1"></i>Matrículas
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="AllSubjects" class="btn btn-marine-light w-100">
                                <i class="fas fa-graduation-cap me-1"></i>Matérias
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="CheckData" class="btn btn-marine-outline w-100">
                                <i class="fas fa-database me-1"></i>Ver Dados
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Students Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-marine-dark">
                    <h4 class="card-title mb-0 text-white">
                        <i class="fas fa-list me-2"></i>Lista de Estudantes
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-slash fa-3x text-marine mb-3"></i>
                            <h4 class="text-marine">Nenhum estudante cadastrado</h4>
                            <a asp-controller="Home" asp-action="Create" class="btn btn-marine mt-3">
                                <i class="fas fa-user-plus me-1"></i>Cadastrar Primeiro Estudante
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-marine">
                                    <tr>
                                        <th class="text-white"><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th class="text-white"><i class="fas fa-user me-1"></i>Nome</th>
                                        <th class="text-white"><i class="fas fa-user-tag me-1"></i>Sobrenome</th>
                                        <th class="text-white"><i class="fas fa-calendar-alt me-1"></i>Data Matrícula</th>
                                        <th class="text-white"><i class="fas fa-actions me-1"></i>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@s.ID</td>
                                            <td>@s.FirstMidName</td>
                                            <td>@s.LastName</td>
                                            <td>
                                                <span class="badge bg-marine-light">
                                                    <i class="fas fa-calendar me-1"></i>@s.EnrollmentDate.ToShortDateString()
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@s.ID" class="btn btn-marine-outline btn-sm">
                                                        <i class="fas fa-edit me-1"></i>Editar
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@s.ID">
                                                        <button type="submit" class="btn btn-marine-dark btn-sm"
                                                                onclick="return confirm('Tem certeza que deseja excluir este estudante?')">
                                                            <i class="fas fa-trash me-1"></i>Excluir
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-marine-blue {
        background: linear-gradient(135deg, #1E3A8A 0%, #1E40AF 100%);
    }

    .bg-marine-dark {
        background-color: #1E3A8A !important;
    }

    .table-marine {
        background-color: #1E40AF !important;
    }

    .btn-marine {
        background-color: #1E40AF;
        border-color: #1E40AF;
        color: white;
    }

        .btn-marine:hover {
            background-color: #1E3A8A;
            border-color: #1E3A8A;
            color: white;
        }

    .btn-marine-light {
        background-color: #3B82F6;
        border-color: #3B82F6;
        color: white;
    }

        .btn-marine-light:hover {
            background-color: #2563EB;
            border-color: #2563EB;
            color: white;
        }

    .btn-marine-outline {
        background-color: transparent;
        border-color: #1E40AF;
        color: #1E40AF;
    }

        .btn-marine-outline:hover {
            background-color: #1E40AF;
            color: white;
        }

    .btn-marine-dark {
        background-color: #1E3A8A;
        border-color: #1E3A8A;
        color: white;
    }

        .btn-marine-dark:hover {
            background-color: #172554;
            border-color: #172554;
            color: white;
        }

    .bg-marine-light {
        background-color: #3B82F6 !important;
        color: white;
    }

    .text-marine {
        color: #1E40AF !important;
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }

    .btn {
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(30, 64, 175, 0.3);
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(30, 64, 175, 0.05);
    }
</style>